{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "producer.py",
          "consumer.py"
        ]
      },
      "vscode": {
        "settings": {},
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance"
        ]
      }
    },
    "updateContentCommand": "[ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed and Requirements met'",
    "postAttachCommand": "python3 producer.py && python3 consumer.py",
    "containerEnv": {
      "ENV_FILE": "${containerWorkspaceFolder}/.env"
    }
  }
  